<style type="text/css">
    .root {
        display: flex;
        justify-content: center;
        align-items: center;
        /* flex-direction: column; */
        height: auto;
    }

    .subdiv {
        background-color: #ecf0f1;
        height: auto;
        width: 600px;
        padding: 15px;
        border-radius: 13px;
        box-shadow: 5px 10px 18px #888888;
        margin-bottom: 50px;
    }

    .center {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .gap {
        margin-top: 10px;
    }

    .btncolor{
        background-color: darkcyan;
        color: white;
    }

    .navbarcolor{
        background-color: #ecf0f1;
    }
</style>

<html>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
    integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    
    <form action="/admin/update_delete_product">
        <div class="root" style="margin-top: 45px;">
            <input type="hidden" value="<%=result.productid %>" name="pid">
            <div class="subdiv">
                <div class="row gap center"
                    style="padding-bottom: 10px; color: darkcyan; font-weight: bold; letter-spacing: 1px; font-size: 30px;">
                    Update & Delete Product
                </div>
                <div class="row center" style="padding: 10px 40px 0px 40px;">
                        <input value="<%=result.productname %>" type="text" class="form-control" name="productname" placeholder="Enter product name"
                            required pattern="[a-z A-Z]+">
                    </div>
                <div class="row" style="padding: 10px 25px 0px 25px;">
                    <div class="col">
                        <textarea class="form-control" name="description" placeholder="Description"><%=result.description %></textarea>
                    </div>
                </div>
                <div class="row" style="margin-top: 25px;">
                    <div class="col center">
                        <input type="submit" value="Update" name="btn" class="btn btncolor" style="margin-right: 15px; border-radius: 5px;">
                        <input type="submit" value="Delete" name="btn" class="btn btncolor" style="border-radius: 5px;">
                    </div>
                </div>
            </div>
        </div>
    </form>

</html>